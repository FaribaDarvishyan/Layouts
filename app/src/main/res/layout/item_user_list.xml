<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/button_padding">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_user_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_user_name"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/item_user_image"
        android:layout_alignBottom="@id/item_user_image"
        android:layout_toRightOf="@id/item_user_image"
        android:padding="@dimen/text_padding"
        tools:text="@tools:sample/lorem/random" />

</RelativeLayout>